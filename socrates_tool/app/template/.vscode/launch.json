    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Debugger",
            "program": "${workspaceFolder}/expanded-bot-framework/src/Debugger.ts",
            "cwd": "${workspaceFolder}/expanded-bot-framework/",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            "args": [ "-c=../build/contracts/EthernetCash.json", "-i=../combined.log", "-b=12" ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Truffle Test",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/truffle-core/cli.js",
            "args": [
                "test"
            ]
        }
    ]
}